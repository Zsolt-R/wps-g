{
	"name": "wpshapers/project-base",
	"description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
	"homepage": "https://wps-prime.pw/",
	"license": "GPL-3.0-or-later",
	"config": {
		"sort-packages": true
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"repositories": {
		"mu-plugins": {
			"type": "path",
			"url": "packages/mu-plugins/*",
			"options": {
				"symlink": true
			}
		},
		"plugins": {
			"type": "path",
			"url": "packages/plugins/*",
			"options": {
				"symlink": true
			}
		},
		"themes": {
			"type": "path",
			"url": "packages/themes/*",
			"options": {
				"symlink": true
			}
		},
		"wpackagist": {
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		"dekode-packages": {
			"type": "composer",
			"url": "https://packages.dekodes.no"
		}
	},
	"require": {
		"php": ">=7.4",
		"boxuk/wp-muplugin-loader": "~1.6.0",
		"composer/installers": "~1.11.0",
		"inpsyde/wp-translation-downloader": "~2.0.2",
		"johnpbloch/wordpress": "~5.8.1",
		"symfony/dotenv": "~5.3.0",
		"wpackagist-plugin/imagify": "~1.10.0",
		"wpackagist-plugin/spinupwp": "~1.3.0",
		"wpackagist-plugin/woocommerce": "^5.6.0",
		"wpackagist-plugin/fakerpress":"0.5.1",
		"wpackagist-plugin/safe-svg":"1.9.9",
		"wpshapers/wps-prime": "@dev",
		"wpshapers/wps-blocks": "@dev"
	},
	"require-dev": {
		"dekode/coding-standards": "4.0.0",
		"wp-cli/i18n-command": "2.2.9",
		"roave/security-advisories": "dev-master",
		"wpackagist-plugin/debug-bar":"1.1.2",
		"wpackagist-plugin/debug-bar-actions-and-filters-addon":"1.5.4"
	},
	"extra": {
		"wordpress-install-dir": "public/wp",
		"installer-paths": {
			"public/content/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			],
			"public/content/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"public/content/themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"wp-translation-downloader": {
			"auto-run": false,
			"languages": [
				"en_EN"
			],
			"directory": "public/content/languages"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"cp public/content/plugins/spinupwp/drop-ins/object-cache.php public/content/object-cache.php"
		],
		"lint": [
			"./vendor/bin/phpcs ."
		],
		"build": [
			"@composer install"
		],
		"build-translations": [
			"@composer wp-translation-downloader:download"
		],
		"build-for-deploy": [
			"@composer install --no-dev && composer wp-translation-downloader:download"
		],
		"make-pot": [
			"./vendor/bin/wp i18n make-pot . languages/wpshapers-base.pot --exclude=\".github,plugins,public/content/plugins,vendor,public/wp,node_modules,tests\" --slug=wpshapers-base"
		]
	}
}
