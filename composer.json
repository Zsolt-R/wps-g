{
  "name": "roots/bedrock",
  "type": "project",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://wps-prime.pw/",
  "license": "GPL-3.0-or-later",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "repositories": {
    "mu-plugins": {
      "type": "path",
      "url": "packages/mu-plugins/*",
      "options": {
        "symlink": true
      }
    },
    "plugins": {
      "type": "path",
      "url": "packages/plugins/*",
      "options": {
        "symlink": true
      }
    },
    "themes": {
      "type": "path",
      "url": "packages/themes/*",
      "options": {
        "symlink": true
      }
    },
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
	"wps-theme": {
		"type": "vcs",
		"url": "https://github.com/Zsolt-R/wps-prime-gutenberg-old"
	},
	"wps-plugins": {
	 "type": "vcs",
	 "url": "https://github.com/Zsolt-R/wps-gutenberg-blocks/"
	},
			"dekode-packages": {
				"type": "composer",
				"url": "https://packages.dekodes.no"
			}
  },
  "require": {
    "php": ">=7.2",
    "composer/installers": "^1.11",
    "johnpbloch/wordpress": "~5.8.0",
    "boxuk/wp-muplugin-loader": "~1.5.0",
    "symfony/dotenv": "~5.3.0",
    "wpackagist-theme/twentytwentyone":"*",
				"wpshapers/wps-prime": "@dev",
			 "wpackagist-plugin/woocommerce": "^5.6.0",
			 "wpackagist-plugin/fakerpress":"0.5.1",
			 "wpackagist-plugin/safe-svg":"1.9.9",
				"wpshapers/wps-prime-gutenberg-old": "dev-main"
  },
  "require-dev": {
    "wp-cli/i18n-command": "2.2.9",
			 "dekode/coding-standards": "4.0.0",
    "roave/security-advisories": "dev-master",
			 "wpackagist-plugin/debug-bar":"1.1.2",
			 "wpackagist-plugin/debug-bar-actions-and-filters-addon":"1.5.4"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "public/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/content/themes/{$name}/": ["type:wordpress-theme"]
    },
	"wp-translation-downloader": {
	 "auto-run": false,
	 "languages": [
	  "it_IT"
	 ],
	 "directory": "public/content/languages"
	}
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "lint": [
      "./vendor/bin/phpcs ."
    ],
    "build": [
      "@composer install"
    ]
  }
}
